{% extends 'base.html' %}
{% block content %}
<div class="container mt-3">
  <h3>{{ view.model._meta.verbose_name_plural|default:'Liste' }}</h3>
  <a class="btn btn-primary" href="{% url '__APP_SLUG__:create' %}">Nouveau</a>
  <a class="btn btn-outline-secondary" href="{% url '__APP_SLUG__:dashboard' %}">Dashboard</a>
  <a class="btn btn-outline-success" href="{% url '__APP_SLUG__:export' %}">Exporter CSV</a>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>ID</th>
        {% for f in view.model._meta.fields|slice:'1:4' %}<th>{{ f.name }}</th>{% endfor %}
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for obj in object_list %}
      <tr>
        <td>{{ obj.pk }}</td>
        {% for f in view.model._meta.fields|slice:'1:4' %}<td>{{ obj|attr:f.name }}</td>{% endfor %}
        <td>
          <a class="btn btn-sm btn-secondary" href="{% url '__APP_SLUG__:update' obj.pk %}">Éditer</a>
          <a class="btn btn-sm btn-danger" href="{% url '__APP_SLUG__:delete' obj.pk %}">Supprimer</a>
        </td>
      </tr>
      {% empty %}
      <tr><td colspan="5">Aucune donnée</td></tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
